<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rui.xb.purple">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".app.RuiApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.launcher.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".zFunctionTest.ui.NetTestActivity" />
        <activity android:name=".zFunctionTest.ui.RecycleViewTestActivity" />
        <activity android:name=".zFunctionTest.ui.WebViewActivity" />
        <activity android:name=".zFunctionTest.ui.HeadImageActivity" />
        <activity android:name=".ui.launcher.AdvertisementActivity" />
        <activity
            android:name=".ui.launcher.LauncherScrollActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MainFragmentActivity" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".zFunctionTest.ui.MvpTestActivity" />
    </application>

</manifest>